<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import eu.hansolo.tilesfx.Tile?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="Classes.GameController"
      style="-fx-background-color: #f2f2f2;">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Label text="Score: 0" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    </HBox>

    <Label fx:id="questionLabel" text="Ready?" wrapText="true"
           style="-fx-font-size: 48px; -fx-font-weight: bold; -fx-text-fill: #333;"/>

    <Tile fx:id="timerTile" skinType="CIRCULAR_PROGRESS"
          prefWidth="200" prefHeight="200"
          backgroundColor="#f2f2f2"/>

    <GridPane hgap="15" vgap="15" alignment="CENTER">
        <Button fx:id="btn1" text="Option A" prefWidth="250" prefHeight="100"
                styleClass="btn, btn-danger, btn-lg"
                GridPane.rowIndex="0" GridPane.columnIndex="0"/>

        <Button fx:id="btn2" text="Option B" prefWidth="250" prefHeight="100"
                styleClass="btn, btn-primary, btn-lg"
                GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Button fx:id="btn3" text="Option C" prefWidth="250" prefHeight="100"
                styleClass="btn, btn-warning, btn-lg"
                GridPane.rowIndex="1" GridPane.columnIndex="0"/>

        <Button fx:id="btn4" text="Option D" prefWidth="250" prefHeight="100"
                styleClass="btn, btn-success, btn-lg"
                GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    </GridPane>

</VBox>